        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WisataCiayumajakuning"
        tools:targetApi="31">
        <activity
            android:name=".user.ForgotPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.WisataCiayumajakuning.NoactionBar"/>
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.WisataCiayumajakuning.NoactionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutActivity"
            android:exported="false"
            android:theme="@style/Theme.WisataCiayumajakuning.NoactionBar" />
        <activity
            android:name=".CoverActivity"
            android:exported="true"
            android:theme="@style/Theme.WisataCiayumajakuning.NoactionBar" />
        <activity
            android:name=".user.UbahPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.WisataCiayumajakuning.NoactionBar" />
        <activity
            android:name=".user.UbahEmailActivity"
            android:exported="false"
            android:theme="@style/Theme.WisataCiayumajakuning.NoactionBar" />
        <activity
            android:name=".user.EditProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.WisataCiayumajakuning.NoactionBar" />

        <meta-data
            android:name="com.google.geo.API_KEY"
            android:value="@string/API_KEY" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".wisata.DirectionActivity"
            android:exported="false"
            android:theme="@style/Theme.WisataCiayumajakuning.NoactionBar" />
        <activity
            android:name=".wisata.CategoryWisataActivity"
            android:exported="false"
            android:theme="@style/Theme.WisataCiayumajakuning.NoactionBar" />
        <activity
            android:name=".wisata.DetailWisataActivity"
            android:exported="false"
            android:theme="@style/Theme.WisataCiayumajakuning.NoactionBar" />
        <activity
            android:name=".user.RegisterUserActivity"
            android:exported="false"
            android:theme="@style/Theme.WisataCiayumajakuning.NoactionBar" />
        <activity
            android:name=".user.LoginUserActivity"
            android:exported="false"
            android:theme="@style/Theme.WisataCiayumajakuning.NoactionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.WisataCiayumajakuning.NoactionBar" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/API_KEY" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>