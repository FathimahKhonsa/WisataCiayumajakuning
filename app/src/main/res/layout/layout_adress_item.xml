<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@drawable/custom_layout_white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="5dp"
        android:fontFamily="@font/nunitobold"
        android:text="@string/lokasi_awal"
        android:textSize="16sp"
        android:textColor="@color/blue"
        app:drawableStartCompat="@drawable/ic_location_grey" />

    <TextView
        android:id="@+id/currentLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/nunitoreguler"
        android:text="@string/current_location"
        android:textSize="12sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@drawable/underline" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:drawablePadding="5dp"
        android:fontFamily="@font/nunitobold"
        android:text="@string/lokasi_tujuan"
        android:textColor="@color/red"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/ic_location_white" />

    <TextView
        android:id="@+id/endLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/nunitomedium"
        android:text="@string/end_location"
        android:textSize="12sp"/>

</LinearLayout>