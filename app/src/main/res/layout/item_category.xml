<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/imgCard"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/wisataImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/sample_wisata"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/namaWisata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/imgCard"
            android:fontFamily="@font/nunitobold"
            android:text="@string/nama_wisata"
            android:textColor="@color/PrimaryDark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/kotaWisata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_below="@id/namaWisata"
            android:layout_toEndOf="@id/imgCard"
            android:fontFamily="@font/nunitosemibold"
            android:text="@string/temapat_wisata"
            android:textColor="@color/Primary"
            android:textSize="16sp"
            android:drawablePadding="5dp"
            app:drawableStartCompat="@drawable/ic_location" />

        <TextView
            android:id="@+id/alamatWisata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_below="@id/kotaWisata"
            android:layout_toEndOf="@id/imgCard"
            android:fontFamily="@font/nunitomedium"
            android:text="@string/temapat_wisata"
            android:textColor="@color/Primary"
            android:textSize="12sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>